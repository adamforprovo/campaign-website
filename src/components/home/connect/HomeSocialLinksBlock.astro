---
import { Image } from "astro:assets";
import facebookLogo from '../../../assets/ui/facebook-logo-small.png';
import instagramLogo from '../../../assets/ui/instagram-logo-small.png';
---

<div class="w-full flex flex-col sm:flex-row gap-3">
  <a 
    class="social-button" 
    target="_blank" 
    rel="noopener noreferrer" 
    href="https://www.facebook.com/"
  >
    <Image src={facebookLogo} alt="Facebook" class="social-icon" />
    Follow on Facebook
  </a>

  <a 
    class="social-button" 
    target="_blank" 
    rel="noopener noreferrer" 
    href="https://www.instagram.com/"
  >
    <Image src={instagramLogo} alt="Instagram" class="social-icon" />
    Follow on Instagram
  </a>
</div>

<style>
  @reference "../../../styles/global.css";

  .social-button {
    @apply h-12 w-full flex items-center justify-center gap-3; 
    @apply rounded-lg text-gray-600 font-semibold;
    @apply bg-white hover:bg-white/60 transition;
  }

  .social-icon {
    @apply size-6;
  }
</style>