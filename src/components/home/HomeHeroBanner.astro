---
import { Image } from "astro:assets";
import heroImage from '../../assets/photos/hero2.webp';
---

<div class="main-container">
  <Image src={heroImage} alt="" class="hero-image" />

  <div class="h-full mx-auto px-4 xs:px-8 max-w-(--breakpoint-md)">
    <div class="relative w-full h-full">
      <div class="blurb">
        <h1>Strong Provo,<br>strong future.</h1>
        <a 
          class="action-button"
          href="/issues"
        >
          Learn More&#x2000;â†’
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @reference "../../styles/global.css";

  .main-container {
    height: clamp(20rem, 50vw, 45rem);
    @apply relative w-full;
    @apply text-content-base md:text-content-lg;
  }

  .hero-image {
    @apply absolute w-full h-full -z-10;
    @apply object-cover;
  }

  .blurb {
    @apply absolute bottom-8 left-0;
    @apply flex flex-col items-start gap-8;
  }

  .blurb h1 {
    @apply text-[2.25em] leading-snug font-bold text-white;
  }

  .action-button {
    @apply px-8 py-3 flex items-center justify-center; 
    @apply rounded-lg text-[1em] font-semibold;
    @apply bg-theme-primary text-white hover:text-white/60 transition;
  }
</style>
